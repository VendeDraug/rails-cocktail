<div class="wrapper">
  <div class="container" style="margin-top: 100px">
    <%= form_for @spec do |f| %>
      <%= f.label :title, "Enter a title" %>
      <%= f.text_field :title %>
      <%= f.label :description, "Enter a short description" %>
      <%= f.text_field :description %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
